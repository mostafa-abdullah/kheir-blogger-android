<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khier"
        android:textSize="@dimen/Login_text_size"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/login_layout_margin_top"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blogger"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginBottom="@dimen/Login_text_margin_bottom"
        android:textSize="16sp"/>

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_hint"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_editText"
        android:ems="10"
        android:drawableLeft="@drawable/ic_mail_black_24dp"
        android:drawableStart="@drawable/ic_mail_black_24dp"
        android:windowSoftInputMode="stateVisible|adjustResize"/>

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_hint"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_editText"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableStart="@drawable/ic_lock_black_24dp"
        android:windowSoftInputMode="stateVisible|adjustResize"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/sign_in_button"
        android:text="@string/sign_in"
        android:layout_marginTop="@dimen/small_margin" />

    <TextView
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:clickable="true"/>

</LinearLayout>