<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nour.kheirblogger.organizationList"
    android:longClickable="false">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/Title"
    android:textSize="35dp"

    android:textAlignment="gravity"
    android:gravity="center_horizontal|center_vertical"


    android:id="@+id/textView"
    android:textColor="#FFFFFF"
    android:background="#0b74f4" />
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:id="@+id/gridLayout"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/organization_1"
            android:id="@+id/organization1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textIsSelectable="false"
            android:textSize="25sp"
            android:textColor="#7cd9ec" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description_1"
            android:id="@+id/description1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/organization_2"
            android:id="@+id/organization2"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textSize="25sp"
            android:textColor="#7cd9ec" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar2"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description_2"
            android:id="@+id/description2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/organization_3"
            android:id="@+id/organization3"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textSize="25sp"
            android:textColor="#7cd9ec" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar3"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description_3"
            android:id="@+id/description3"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/organization_3"
            android:id="@+id/organization3"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textSize="25sp"
            android:textColor="#7cd9ec" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar3"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description_3"
            android:id="@+id/description3"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/organization_3"
            android:id="@+id/organization3"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:textSize="25sp"
            android:textColor="#7cd9ec" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar3"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/description_3"
            android:id="@+id/description3"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:maxLines="2" />
    </LinearLayout>

 </ScrollView>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView" />

</RelativeLayout>
